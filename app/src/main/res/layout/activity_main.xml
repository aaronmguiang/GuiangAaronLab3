        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="416dp" />

    <TextView
        android:id="@+id/textView3"
        style="@style/SubTitle"
        android:layout_width="121dp"
        android:layout_height="19dp"
